<%- include ('../layouts/gyws_header') %> 

<style type="text/css">
.col-md-12 {
  margin-top: 0px !important;
}
.card-signup .card-title {
    margin-bottom: 2rem;
    font-weight: 300;
    font-size: 1.5rem;
}
.card-signup {
    border: 0;
    border-radius: 1rem;
    box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
}
</style>

<section class="container body_top donor_login card-signup" style="margin-top: 120px;">
  <div class="row">
    <div class="col-12"><h5 class="card-title text-center">Donor Sign Up</h5></div>
  </div>
  <div class="row">
    <div class="col-12">
      <form action="" action="post" method="post" enctype="multipart/form-data">
        <div class="card">
          <%- include ('../layouts/op_message') %>
          <!-- /.card-header -->
          <div class="card-body">
            <div class="row">
              <div class="col-md-3 text-center parent-center-div">
                <!-- <img src="<%=baseurl%>admin/images/user.png" width="170" id="preview">
                <img src="<%=baseurl%>admin/images/photo-upload.png" width="30" class="photo-upload-icon">
                <input type="file" name="upload-pp" id="upload-pp" value=""> -->
                <div class="vh-center-div">
                      <img src="/gyws/images/user.png" id="preview">
                      <img src="/gyws/images/photo-upload.png" width="30" class="photo-upload-icon">
                      <input type="file" name="upload-pp" id="upload-pp" value="">
                </div><!-- .vh-center-div -->
              </div>
              <div class="col-md-9">
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label>Donor Name</label>
                      <input type="text" name="name" id="name" class="form-control" placeholder="Donor Name" value="">
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label>Contact Number</label>
                          <div class="">
                            <input type="text" name="country_code_1" id="country_code_1" class="form-control gyws-cc" placeholder="+91" value="">
                            <input type="text" name="contact_no" id="contact_no" class="form-control gyws-cn" placeholder="Contact Number" value="">
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label>Alternative Contact Number</label>
                          <div class="">
                            <input type="text" name="country_code_2" id="country_code_2" class="form-control gyws-cc" placeholder="+91" value="">
                            <input type="text" name="alt_contact_no" id="alt_contact_no" class="form-control gyws-cn" placeholder="Alternative Contact Number" value="">
                          </div>
                        </div>
                      </div>
                    </div>
                  </div><!-- .col-md-12 -->
                </div><!-- .row -->
              </div>
            </div><!--.row-->


            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Country</label>
                  <input type="text" name="country" id="country" class="form-control" placeholder="Country" value="">
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>State</label>
                  <input type="text" name="state" id="state" class="form-control" placeholder="State" value="">
                </div>
              </div>
            </div>


            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>City</label>
                  <input type="text" name="city" id="city" class="form-control" placeholder="City" value="">
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label>PIN /Zipcode</label>
                  <input type="text" name="pin" id="pin" class="form-control" placeholder="PIN/Zipcode" value="">
                </div>
              </div>
            </div><!--.row-->


            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label>Address</label>
                  <textarea name="address" id="address" class="form-control" placeholder="Address"></textarea>
                </div>
              </div><!-- .col-md-12 -->
            </div><!-- .row -->

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Email</label>
                  <input type="text" name="email" id="email" class="form-control" placeholder="Email" value="">
                </div>
              </div><!-- .col-md-12 -->
            </div><!-- .row -->
            

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Username</label>
                  <input type="text" name="username" id="username" class="form-control" placeholder="Username" value="" />
                </div>
              </div><!-- .col-md-12 -->

              <div class="col-md-6">
                <div class="form-group">
                  <label>Password</label>
                  <input type="password" name="password" id="password" class="form-control" placeholder="Password" value="" />
                </div>
              </div><!-- .col-md-12 -->
            </div><!-- .row -->
          </div>
          <!-- /.card-body -->
          <div class="card-footer">
            <input type="hidden" name="donor_id" id="donor_id" value="">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>

        </div>
      </form>
    </div><!-- .col-12 -->
  </div><!-- .row -->
</section>









<%- include ('../layouts/gyws_footer') %>
