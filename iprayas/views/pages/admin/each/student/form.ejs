<%- include ('../../layouts/header') %>
<%- include ('../../layouts/sidebar') %>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1><%= student_details ? 'Update' : 'New' %> Student</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
              <li class="breadcrumb-item"><a href="#">EACH</a></li>
              <li class="breadcrumb-item"><a href="/admin/each/student/list">Student</a></li>
              <li class="breadcrumb-item"><a href="#">Form</a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <form action="" action="post" method="post" enctype="multipart/form-data">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title" style="width: 100%;">
                  <span class="float-right">
                    <a href="/admin/each/student/form">+ Add new student</a> | 
                    <a href="/admin/each/student/list">Student list</a>
                  </span>
                </h3>
              </div>
              <%- include ('../../layouts/op_message') %>
              <!-- /.card-header -->
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3 text-center parent-center-div">
                    <!-- <img src="<%=baseurl%>admin/images/user.png" width="170" id="preview">
                    <img src="<%=baseurl%>admin/images/photo-upload.png" width="30" class="photo-upload-icon">
                    <input type="file" name="upload-pp" id="upload-pp" value=""> -->
                    <div class="vh-center-div">
                      <%
                      var src = baseurl + "admin/images/user.png";
                      if(student_details) {
                        if(student_details.photo != '') {
                          src = baseurl + "contents/students/" + student_details.photo;
                        } 
                      }
                      %>
                      <img src="<%=src%>" id="preview">
                      <img src="<%=baseurl%>admin/images/photo-upload.png" width="30" class="photo-upload-icon">
                      <input type="file" name="upload-pp" id="upload-pp" value="">
                    </div><!-- .vh-center-div -->
                  </div>
                  <div class="col-md-9">
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>Student Name</label>
                          <input type="text" name="name" id="name" class="form-control" placeholder="Student Name" value="<%= student_details ? student_details.name : ''%>">
                        </div>
                      </div>
                      <div class="col-md-12">
                        <div class="row">
                          <div class="col-md-2">
                            <div class="form-group">
                              <label>Session</label>
                              <select class="form-control" name="session" id="session">
                                <option selected="selected">Choose ...</option>
                                <% academic_session_list.forEach(function(aca_sess) { %>
                                  <option value="<%=aca_sess %>"><%=aca_sess %></option>
                                <% }) %>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div class="form-group">
                              <label>Gender</label>
                              <select class="form-control" name="gender" id="gender">
                                <option value="">Choose ...</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-goup">
                              <label>Class</label>
                              <select class="form-control" name="standard" id="standard">
                                <option value="">Choose ...</option>
                            <option value="LKG">LKG</option>
                            <option value="UKG">UKG</option>
                            <option value="Nursery">Nursery</option>
		            <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div class="form-group">
                              <label>Section</label>
                              <select class="form-control" name="section" id="section">
                                <option value="">Choose ...</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div class="form-group">
                              <label>Roll</label>
                              <input type="number" name="roll" id="roll" class="form-control" min="1" max="100" value="<%= student_details ? student_details.student_class[0].roll : ''%>">
                            </div>
                          </div>
                        </div>
                        <!-- <div class="form-group">
                          <label>Email</label>
                          <input type="text" name="email" id="email" class="form-control" placeholder="Email" value="<%= student_details ? student_details.email : ''%>">
                        </div> -->
                      </div>
                    </div><!-- .row -->
                  </div>
                </div><!--.row-->


                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Father Name</label>
                      <input type="text" name="father_name" id="father_name" class="form-control" placeholder="Father Name" value="<%= student_details ? student_details.father_name : ''%>">
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Mother Name</label>
                      <input type="text" name="mother_name" id="mother_name" class="form-control" placeholder="Father Name" value="<%= student_details ? student_details.mother_name : ''%>">
                    </div>
                  </div>
                </div><!--.row-->



                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Contact Number</label>
                      <input type="text" name="contact_no" id="contact_no" class="form-control" placeholder="Contact Number" value="<%= student_details ? student_details.contact_no : ''%>">
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Left</label>
                      <select class="form-control" name="left" id="left">
                        <option value="">Choose ...</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                      </select>
                    </div>
                  </div>
                </div><!--.row-->



                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Address</label>
                      <textarea name="address" id="address" class="form-control" placeholder="Address"><%= student_details ? student_details.address : ''%></textarea>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Reason for Leave</label>
                      <textarea name="leave_reason" id="leave_reason" class="form-control" placeholder="Reason for Leave"><%= student_details ? student_details.leave_reason : ''%></textarea>
                    </div>
                  </div>
                </div><!--.row-->



              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <input type="hidden" name="student_id" id="student_id" value="<%= student_details ? student_details.student_id : '' %>">
                <input type="hidden" name="sc_id" id="sc_id" value="<%= student_details ? student_details.student_class[0].sc_id : '' %>">
                <button type="submit" class="btn btn-primary"><%= student_details ? 'Update' : 'Create' %></button>
              </div>

            </div>
          </form>
        </div><!-- .col-12 -->
      </div><!-- .row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <% if(student_details) { %>
    <script type="text/javascript">
      document.getElementById('standard').value="<%= student_details.student_class[0].standard %>";
      document.getElementById('section').value="<%= student_details.student_class[0].section %>";
      document.getElementById('gender').value="<%= student_details.gender %>";
      document.getElementById('left').value="<%= student_details.left %>";
      document.getElementById('session').value="<%= student_details.student_class[0].academic_session %>";
    </script>
  <% } %>

<%- include ('../../layouts/footer') %>