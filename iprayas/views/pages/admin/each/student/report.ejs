<%- include ('../../layouts/header') %>
<%- include ('../../layouts/sidebar') %>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1><%= student_details ? 'Update' : 'New' %> Student</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
              <li class="breadcrumb-item"><a href="#">EACH</a></li>
              <li class="breadcrumb-item"><a href="/admin/each/student/list">Student</a></li>
              <li class="breadcrumb-item"><a href="#">Form</a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title" style="width: 100%;">
                  <span class="float-right">
                    <a href="/admin/each/student/form">+ Add new student</a> | 
                    <a href="/admin/each/student/list">Student list</a>
                  </span>
                </h3>
              </div>
              <%- include ('../../layouts/op_message') %>
              <!-- /.card-header -->
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3 text-center parent-center-div">
                    <!-- <img src="<%=baseurl%>admin/images/user.png" width="170" id="preview">
                    <img src="<%=baseurl%>admin/images/photo-upload.png" width="30" class="photo-upload-icon">
                    <input type="file" name="upload-pp" id="upload-pp" value=""> -->
                    <div class="vh-center-div">
                      <%
                      var src = baseurl + "admin/images/user.png";
                      if(student_details) {
                        if(student_details.photo != '') {
                          src = baseurl + "contents/students/" + student_details.photo;
                        } 
                      }
                      %>
                      <img src="<%=src%>" id="preview">
                    </div><!-- .vh-center-div -->
                  </div>
                  <div class="col-md-9">
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>Student Name</label>
                          <input type="text" name="name" id="name" class="form-control" placeholder="Student Name" value="<%= student_details ? student_details.name : ''%>" readonly="readonly">
                        </div>
                      </div>
                      <div class="col-md-12">
                        <div class="row">
                          <div class="col-md-3">
                            <div class="form-group">
                              <label>Session</label>
                              <select class="form-control" name="session" id="session" readonly="readonly">
                                <option selected="selected">Choose ...</option>
                                <% academic_session_list.forEach(function(aca_sess) { %>
                                  <option value="<%=aca_sess %>"><%=aca_sess %></option>
                                <% }) %>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-3">
                            <div class="form-group">
                              <label>Gender</label>
                              <select class="form-control" name="gender" id="gender" readonly="readonly">
                                <option value="">Choose ...</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div class="form-goup">
                              <label>Class</label>
                              <select class="form-control" name="standard" id="standard" readonly="readonly">
                                <option value="">Choose ...</option>
                            <option value="LKG">LKG</option>
                            <option value="UKG">UKG</option>
                            <option value="Nursery">Nursery</option>
		            
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div class="form-group">
                              <label>Section</label>
                              <select class="form-control" name="section" id="section" readonly="readonly">
                                <option value="">Choose ...</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div class="form-group">
                              <label>Roll</label>
                              <input type="number" name="roll" id="roll" class="form-control" min="1" max="100" value="<%= student_details ? student_details.student_class[0].roll : ''%>" readonly="readonly">
                            </div>
                          </div>
                        </div>
                        <!-- <div class="form-group">
                          <label>Email</label>
                          <input type="text" name="email" id="email" class="form-control" placeholder="Email" value="<%= student_details ? student_details.email : ''%>">
                        </div> -->
                      </div>
                    </div><!-- .row -->
                  </div>
                </div><!--.row-->


                <div class="row mt-3">
                  <div class="col-md-12">
                    <div class="form-group">
                      <h5>Upload Report</h5>
                      <hr/>
                    </div>
                  </div>
                </div>

                <form action="" action="post" method="post" enctype="multipart/form-data">
                <div class="row">
                  <!-- <form action="" action="post" method="post" enctype="multipart/form-data"> -->
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Report Card</label>
                        <select name="report_card" id="report_card" class="form-control">
                          <option>Choose...</option>
                          <option value="report1">Report 1</option>
                          <option value="report2">Report 2</option>
                          <option value="report3">Report 3</option>
                          <option value="report4">Report 4</option>
                        </select>
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Select Report</label>
                        <input type="file" name="uploadFile" id="uploadFile" class="form-control" value="">
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-group">
                        <label>&nbsp;</label>
                        <input type="hidden" name="student_id" id="student_id" value="<%= student_details ? student_details.student_id : '' %>">
                        <input type="hidden" name="academic_session" id="academic_session" value="<%= student_details ? student_details.student_class[0].academic_session : '' %>">
                        <button type="submit" class="btn btn-primary form-control">Upload Report</button> 
                      </div>     
                    </div>
                  <!-- </form> -->
                </div><!--.row-->
              </form>



                <div class="row mt-3">
                  <div class="col-md-12">
                    <div class="form-group">
                      <h5>Uploaded Reports</h5>
                      <hr/>
                    </div>
                  </div>
                </div>



                <div class="row">
                  <% if(student_details.student_class[0].report1 != null && student_details.student_class[0].report1 != '') {%>
                        <div class="col-md-3 text-center">
                          <figure class="figure">
                            <a href="/contents/student_reports/<%=student_details.student_class[0].report1%>">
                                <img src="/admin/images/pdf.png" class="figure-img img-thumbnail rounded report_img">
                                <figcaption class="figure-caption text-center">Report Card 1</figcaption>
                            </a>
                        </figure>
                      </div>
                  <% } %>

                  <% if(student_details.student_class[0].report2 != null && student_details.student_class[0].report2 != '') {%>
                    <div class="col-md-3 text-center">
                      <figure class="figure">
                        <a href="/contents/student_reports/<%=student_details.student_class[0].report2%>">
                            <img src="/admin/images/pdf.png" class="figure-img img-thumbnail rounded report_img">
                            <figcaption class="figure-caption text-center">Report Card 2</figcaption>
                        </a>
                      </figure>
                    </div>
                  <% } %>

                  <% if(student_details.student_class[0].report3 != null && student_details.student_class[0].report3 != '') {%>
                    <div class="col-md-3 text-center">
                      <figure class="figure">
                        <a href="/contents/student_reports/<%=student_details.student_class[0].report3%>">
                            <img src="/admin/images/pdf.png" class="figure-img img-thumbnail rounded report_img">
                            <figcaption class="figure-caption text-center">Report Card 3</figcaption>
                        </a>
                      </figure>
                    </div>
                  <% } %>

                  <% if(student_details.student_class[0].report4 != null && student_details.student_class[0].report4 != '') {%>
                      <div class="col-md-3 text-center">
                        <figure class="figure">
                          <a href="/contents/student_reports/<%=student_details.student_class[0].report4%>">
                              <img src="/admin/images/pdf.png" class="figure-img img-thumbnail rounded report_img">
                              <figcaption class="figure-caption text-center">Report Card 4</figcaption>
                          </a>
                        </figure>
                      </div>
                  <% } %>
                </div><!-- row -->


              </div>
              <!-- /.card-body -->
              <div class="card-footer">
              </div>

            </div>
        </div><!-- .col-12 -->
      </div><!-- .row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <% if(student_details) { %>
    <script type="text/javascript">
      document.getElementById('standard').value="<%= student_details.student_class[0].standard %>";
      document.getElementById('section').value="<%= student_details.student_class[0].section %>";
      document.getElementById('gender').value="<%= student_details.gender %>";
      document.getElementById('left').value="<%= student_details.left %>";
      document.getElementById('session').value="<%= student_details.student_class[0].academic_session %>";
    </script>
  <% } %>

<%- include ('../../layouts/footer') %>