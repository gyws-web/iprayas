<%- include ('../../layouts/header') %>
<%- include ('../../layouts/sidebar') %>


  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Media Link List</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
              <li class="breadcrumb-item"><a href="#">Website update</a></li>
              <li class="breadcrumb-item"><a href="#">Media Links</a></li>
              <li class="breadcrumb-item"><a href="#">List</a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title" style="width: 100%;">
                  <span class="float-right">
                    <a href="/admin/website-update/media-links/form">+ Add new media links</a> | 
                    <a href="/admin/website-update/media-links/list">Media links list</a>
                  </span>
                </h3>
              </div>
              <%- include ('../../layouts/op_message') %>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Sl.</th>
                    <th>Program ID</th>
                    <th>Program Name</th>
                    <th>Cost</th>
                    <th>Active</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% 
                    var sn = 1;
                    media_link_list.forEach(function(media) { %>
                    <tr>
                      <td><%= sn %></td>
                      <td><%= don_prg.program_id%></td>
                      <td><%= don_prg.program_name %></td>
                      <td><%= don_prg.cost %></td>
                      <td><%= don_prg.active %></td>
                      <td>
                        <a href="/admin/website-update/donation-program/form/<%= don_prg.donation_program_id %>" class="btn btn-success btn-sm mr-2">View</a>
                        <button class="btn btn-danger btn-sm gyws-btn-del" data-toggle="modal" data-target="#modal-danger" data-del-id="<%= don_prg.donation_program_id %>">Delete</button>
                        <form action="/admin/website-update/donation-program/delete" method="post" id="del_form_<%= don_prg.donation_program_id %>">
                            <input type="hidden" name="donation_program_id" id="hidden_id" value="<%= don_prg.donation_program_id %>">
                        </form>
                      </td>
                    </tr>
                  <% sn++; }) %>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Sl.</th>
                    <th>Program ID</th>
                    <th>Program Name</th>
                    <th>Cost</th>
                    <th>Active</th>
                    <th>Action</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div><!-- .col-12 -->
      </div><!-- .row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->


<%- include ('../../layouts/footer') %>